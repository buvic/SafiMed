<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" sizes="57x57" href="~/Content/Styles/Favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/Content/Styles/Favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/Styles/Favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/Styles/Favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/Styles/Favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/Content/Styles/Favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/Content/Styles/Favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/Content/Styles/Favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/Styles/Favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/Content/Styles/Favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/Styles/Favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/Styles/Favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/Styles/Favicon/favicon-16x16.png">

    <link rel="manifest" href="~/Content/Styles/Favicon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/Content/Styles/Favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <title>@ViewBag.Title</title>
</head>

<body>
    @Styles.Render("~/Content/css")
    <div class="navbar navbar-default">
        <div class="line-header"></div>
        <div class="container">
            <div class="col-md-12">
                <a href="@Url.Action("Home", "Home")"><img class="big-logo" src="~/Content/Styles/Images/logo.png" width="240" height="80" /></a>
            </div>
        </div>
        <div class="container">
            <div class="col-md-12">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Home", "Home")"><span class="navbar-brand" title="@ViewRes.Resource.Home"></span></a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        @{
                            if (ViewBag.Action == "Home")
                            {
                                <li class="active"><a href="@Url.Action("Home", "Home")">@ViewRes.Resource.Home</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Home", "Home")">@ViewRes.Resource.Home</a></li>
                            }
                            if (ViewBag.Action == "AboutUs")
                            {
                                <li class="active"><a href="@Url.Action("AboutUs", "Home")">@ViewRes.Resource.AboutUs</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("AboutUs", "Home")">@ViewRes.Resource.AboutUs</a></li>
                            }
                            if (ViewBag.Action == "Cooperation")
                            {
                                <li class="active"><a href="@Url.Action("Cooperation", "Home")">@ViewRes.Resource.Cooperation</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Cooperation", "Home")">@ViewRes.Resource.Cooperation</a></li>
                            }
                            if (ViewBag.Action == "Contact")
                            {
                                <li class="active"><a href="@Url.Action("Contact", "Home")">@ViewRes.Resource.Contact</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Contact", "Home")">@ViewRes.Resource.Contact</a></li>
                            }
                        }
                        <p class="navbar-text"></p>
                        @{
                            if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "ru-RU")
                            {
                                <li class="active"><a class="ru lang-selector" onclick=" javascript:ChangeCulture('ru');">@ViewRes.Resource.Ru</a></li>
                                <li><a class="en lang-selector" onclick="javascript:ChangeCulture('en'); ">@ViewRes.Resource.En</a></li>
                            }
                            else
                            {
                                <li><a class="ru lang-selector" onclick="javascript:ChangeCulture('ru');">@ViewRes.Resource.Ru</a></li>
                                <li class="active"><a class="en lang-selector" onclick="javascript:ChangeCulture('en');">@ViewRes.Resource.En</a></li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </div>
        <div class="line-header"></div>
    </div>
    <div>
        @RenderBody()
        <footer class="footer">
            <br />
            <div class="container">
                <p class="pull-left">&copy; @ViewRes.Resource.CopyrightFooter @DateTime.Now.Year. @ViewRes.Resource.FooterRights</p>
                <p class="pull-right">@ViewRes.Resource.ContactsBodyText8 @ViewRes.Resource.Email</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)
</body>
</html>
