@{

    ViewBag.Title = ViewRes.Resource.TitleHome;
}


<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        @*<ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>*@

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/Styles/Images/pharmaceutical-preparations.png" alt="@ViewRes.Resource.MainSlider1Text" width="850" height="400">
                <div class="carousel-caption">
                    <div class="slider-text">
                        <div class="line-header"></div>
                        <h3 class="blue-color-text">@ViewRes.Resource.MainSlider1Text</h3>
                        <div class="line-header"></div>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/Styles/Images/devices.png" alt="@ViewRes.Resource.MainSlider5Text" width="850" height="400">
                <div class="carousel-caption">
                    <div class="slider-text">
                        <div class="line-header"></div>
                        <h3 class="blue-color-text">@ViewRes.Resource.MainSlider5Text</h3>
                        <div class="line-header"></div>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/Styles/Images/biopharmaceutical.png" alt="@ViewRes.Resource.MainSlider2Text" width="850" height="400">
                <div class="carousel-caption">
                    <div class="slider-text">
                        <div class="line-header"></div>
                        <h3 class="blue-color-text">@ViewRes.Resource.MainSlider2Text</h3>
                        <div class="line-header"></div>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/Styles/Images/otc-and-medical-cosmetics.png" alt="@ViewRes.Resource.MainSlider3Text" width="850" height="400">
                <div class="carousel-caption">
                    <div class="slider-text">
                        <div class="line-header"></div>
                        <h3 class="blue-color-text">@ViewRes.Resource.MainSlider3Text</h3>
                        <div class="line-header"></div>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/Styles/Images/help-to-ensure-the-availability.png" alt="@ViewRes.Resource.MainSlider4Text" width="850" height="400">
                <div class="carousel-caption">
                    <div class="slider-text">
                        <div class="line-header"></div>
                        <h3 class="blue-color-text">@ViewRes.Resource.MainSlider4Text</h3>
                        <div class="line-header"></div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container">
    <h2 class="blue-color-text">@ViewRes.Resource.MainTitle</h2>
    <p>@ViewRes.Resource.MainBody</p>
</div>


<div class="container">
    <div class="row footer-menu">
        <div class="col-md-4">
            <a class="" href="@Url.Action("Cooperation", "Home", new { tab = "consalting" })"><h3>@ViewRes.Resource.ConsultingService</h3></a>
            <p>@ViewRes.Resource.ConsultingServiceText</p>
        </div>
        <div class="col-md-4">
            <a class="" href="@Url.Action("Cooperation", "Home", new { tab = "marketing" })"><h3>@ViewRes.Resource.CommercialService</h3></a>
            <p>@ViewRes.Resource.CommercialServiceText</p>
        </div>
        <div class="col-md-4">
            <a class="" href="@Url.Action("Cooperation", "Home", new { tab = "benefits" })"><h3>@ViewRes.Resource.CoreBenefits</h3></a>
            <p>@ViewRes.Resource.CoreBenefitsText</p>
        </div>
    </div>
</div>
