@model SafiMed.Models.FeedbackResponse

@{
    ViewBag.Title = @ViewRes.Resource.TitleContact;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pages-content">
    <div class="container">
        <div class="col-md-6">
            <img class="pages-content-image pull-left" src="~/Content/Styles/Images/contacts.png"/>
        </div>
        <div class="col-md-6">
            <div class="tab-text">
                <h3 class="bold">@ViewRes.Resource.ContactsTitle</h3>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-md-6">

        <div class="form-group">
            <h3>@ViewRes.Resource.ContactsBodyText1</h3>
        </div>
        <div class="form-group blue-color-text">
            <p class="bold">@ViewRes.Resource.ContactsBodyText2</p>
            <p class="bold">@ViewRes.Resource.ContactsBodyText3</p>
        </div>
        @*<div class="form-group blue-color-text">
            <p>@ViewRes.Resource.ContactsBodyText4</p>
        </div>*@
        <div class="form-group blue-color-text">
            <p>@ViewRes.Resource.ContactsBodyText5</p>
        </div>
        <div class="form-group blue-color-text">
            <p>@ViewRes.Resource.ContactsBodyText6</p>
            <p>@ViewRes.Resource.ContactsBodyText7</p>
        </div>
        <div class="form-group blue-color-text">
            <p>@ViewRes.Resource.ContactsBodyText8 @ViewRes.Resource.Email</p>
        </div>
    </div>

    <div class="col-md-6">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h3>@ViewRes.Resource.ContactFormTitle</h3>
            <p class="blue-color-text">@ViewRes.Resource.ContactFormDesc</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = @ViewRes.Resource.ContactFormName } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.Company, new { htmlAttributes = new { @class = "form-control", placeholder = @ViewRes.Resource.ContactFormComp } })
                @Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control", placeholder = @ViewRes.Resource.ContactFormEMail } })
                @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = @ViewRes.Resource.ContactFormPhone } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.TextAreaFor(model => model.Message, 5, 40, new { @class = "form-control", placeholder = @ViewRes.Resource.ContactFormMail })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="@ViewRes.Resource.ContactFormSend" class="btn btn-primary" />
            </div>

            if (ViewBag.isError)
            {
                <div class="form-group">
                    <div class="alert alert-message alert-danger">
                        <p>@ViewRes.Resource.MessageSendError</p>
                    </div>
                </div>
            }
            if (ViewBag.isSend)
            {
                <div class="form-group">
                    <div class="alert alert-message alert-success">
                        <p>@ViewRes.Resource.MessageSendSuccess</p>
                    </div>
                </div>
            }
        }
    </div>
</div>
